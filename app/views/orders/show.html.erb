<div class="container">
    <div class="card-title text-primary"><strong>Meal: 
          <% if(@order.meal == 0) %>
            Breakfast
          <% else %>
            Lunch
          <% end %>
        </strong></div>
    <div class="card-subtitle mb-2 text-secondary"><strong>Restaurant: <%= @order[:restaurant] %></strong></div>
    <div class="card-subtitle mb-2 text-muted">Order Status:
        <% if(@order.status == 0) %>
            Waiting
        <% else %>
            Finished
        <% end %>
    </div>
    <td class="align-middle"><%= link_to 'details' ,"/user_orders/#{@order.id}", class: "btn btn-primary text-light mt-2 mb-2" %></td>
    <div class='align-middle'> <img src="/images/menus/<%= @order.menu %>" width=400 /></div>


    <h3>The invited people :</h3>
    <div class="container row" col-8>
        <% @invited_users.each do |user| %>
            <div class="alert alert-primary col-2 ml-3 text-center"><%= user.name %></div>
        <% end %>
    </div>
</div>